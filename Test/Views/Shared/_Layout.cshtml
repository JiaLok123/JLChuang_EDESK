<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Test</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    
    <style>
        body { background:#efefef; }
        .left-tabs { width:160px; }
        .tree-menu { background:#fff; padding:10px; border:1px solid #ddd; max-height:400px; overflow:auto; }
        .content-area { background:#fff; padding:20px; border:1px solid #ddd; }
    </style>
</head>
<body>
    <div class="container" style="margin-top:20px;">
        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
